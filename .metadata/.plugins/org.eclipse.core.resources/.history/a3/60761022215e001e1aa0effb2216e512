#include "reader.h"
#include "UART.h"
#include "printf.h"
#include "LED.h"
uint8_t run(){
	//read one characterA
	//print that character on it's own line
	char ch = (char)USART_Read(USART2);
	printf("%c\r\n",ch);
	LED_Toggle((int)ch);
	return ch;
}

uint8_t read_line(){
	//read one characterA
	//print that character on it's own line
	char ch = (char)USART_Read(USART2);
	char toReturn[128];
	int cnt = 0;
	while(ch != 'n'){
		ch = (char)USART_Read(USART2);
		toReturn[cnt] = ch;
		cnt++;
	}
	printf("%c\r\n",toReturn[0]);
	return toReturn[1];
}
