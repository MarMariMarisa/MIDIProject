#include "systick.h"

struct SYST* init_systick(){

	struct SYST* syst = (struct SYST*) 0xE000E010;
	syst->RVR = 7999999;//(99999+1) / 8000000 sec timer
	syst->CSR = 0;
	syst->CSR |= 1<<2; //sets the second but to 1; clk source
	syst->CSR |=1 << 0; //set bit 0 to turn on
	return syst;

}

