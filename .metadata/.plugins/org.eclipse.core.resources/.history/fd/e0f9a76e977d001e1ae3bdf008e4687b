void SysTick_Handler(){
	//configure systick to use interupts
	//count to one second
	//updates seconds
	//prints seconds
    init_syst ();
    // Display num seconds since started, once a second
    int count = 0;
    int seconds = 0;
    while (1){
        if ((SYST_TICK->CSR >> 16) == 1) {
            count++;
            if (count == 10){
            	(SYST_TICK->CTRL << 16) = 1;
                seconds++;
                count = 0;
                printf ("%d\n", seconds);
            }
        }
    }
}
