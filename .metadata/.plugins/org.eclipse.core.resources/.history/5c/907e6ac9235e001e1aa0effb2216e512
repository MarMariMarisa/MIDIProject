#include "reader.h"
#include "UART.h"
#include "printf.h"
#include "LED.h"

static char BUFFER[128];

char* read_line(){
	//read one characterA
	//print that character on it's own line
	int index = 0;
	char ch = USART_Read(USART2);
	BUFFER[index] = ch;
	while(ch != '\r'){
		ch = (char)USART_Read(USART2);
		BUFFER[index] = ch;
		index++;
	}
	return BUFFER;

}
void run(){
	//read one characterA
	//print that character on it's own line
	char* line = read_line();
	printf("%s\n",line);
}


